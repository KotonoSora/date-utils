{
	"compilerOptions": {
		"target": "ES2019",
		"useDefineForClassFields": true,
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"composite": true,
	},
	"include": [
		"__test__",
		"src"
	]
}
